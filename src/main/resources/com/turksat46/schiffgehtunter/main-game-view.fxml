              <!-- Spielerfeld -->
              <BorderPane fx:id="spielerstackpane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                  <top>
                      <Label alignment="CENTER" style="-fx-background-color: #00000044;" text="Spielerfeld" textFill="WHITE" BorderPane.alignment="CENTER">
                          <font>
                              <Font size="18.0" />
                          </font>
                     <BorderPane.margin>
                        <Insets bottom="10.0" />
                     </BorderPane.margin>
                      </Label>
                  </top>
               <center>
                  <GridPane BorderPane.alignment="CENTER">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                  </GridPane>
               </center>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
              </BorderPane>
      
              <!-- Gegnerfeld -->
              <BorderPane fx:id="gegnerstackpane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="177.0" HBox.hgrow="ALWAYS">
                  <top>
                      <Label alignment="CENTER" style="-fx-background-color: #00000044;" text="Gegnerfeld" textFill="WHITE" BorderPane.alignment="CENTER">
                          <font>
                              <Font size="18.0" />
                          </font>
                      </Label>
                  </top>
                  <center>
                      <GridPane fx:id="gegnergridpane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
                          <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                      </GridPane>
                  </center>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
              </BorderPane>
         </children>
      </HBox>

        <!-- Start Button -->
        <Button fx:id="startButton" layoutX="27.0" layoutY="376.0" mnemonicParsing="false" onAction="#startGame" prefHeight="47.0" prefWidth="104.0" text="START" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" />
    </children>
</AnchorPane>
